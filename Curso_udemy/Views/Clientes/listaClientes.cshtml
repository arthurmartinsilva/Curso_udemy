@model IEnumerable<Curso_udemy.Models.Clientes>

@{
    ViewBag.Title = "listaClientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Clientes</h2>


@if (Model != null)
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Clientes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model)
            {
                <tr>
                    <td>@Html.ActionLink(cliente.nome, "listaClientesByID", new { id = cliente.id })</td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <p>Não existem clientes cadastrados</p>
}

