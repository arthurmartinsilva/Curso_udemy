
@{
    ViewBag.Title = "listaClientesByID";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cliente</h2>

@if (Model == null)
{
    <p>Não existe o cliente procurado!</p>
}
else
{
    <li>
        <ul>         
            @{
                string nomeCliente = Model.nome;
            } 
            @Html.ActionLink(nomeCliente, "detalhesCliente", new { id = Model.id })
        </ul>
    </li>
}

